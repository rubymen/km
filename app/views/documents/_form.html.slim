  = f.input :title
  = f.input :description
  = f.input :content
  = f.association :tags
  = f.association :users

  #attachments
    = f.simple_fields_for :attachments do |attachment|
      = render 'attachment_fields', f: attachment
    .links
      = link_to_add_association 'Ajouter une pi√®ce jointe', f, :attachments, class: 'btn btn-info mtm'

  = f.button :submit, 'Valider le document', class: 'btn-success mtl'
